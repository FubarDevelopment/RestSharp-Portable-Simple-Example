<Window x:Class="FubarDev.Example.GoogleMaps.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label Content="Von" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Nach" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Origin" Height="23" Margin="69,14,10,0" TextWrapping="Wrap" Text="Hannover Hbf" VerticalAlignment="Top"/>
        <TextBox x:Name="Destination" Height="23" Margin="69,45,10,0" TextWrapping="Wrap" Text="Hamburg Hbf" VerticalAlignment="Top"/>
        <Button x:Name="Search" Content="Suchen" HorizontalAlignment="Left" Margin="10,73,0,0" VerticalAlignment="Top" Width="75" Click="Search_Click"/>
        <TabControl Margin="10,98,10,10">
            <TabItem Header="Text">
                <Grid Background="#FFE5E5E5">
                    <TextBox x:Name="OutputText" IsReadOnly="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" />
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
